[base16]
base00 = ${xrdb:base00}
base01 = ${xrdb:base01}
base02 = ${xrdb:base02}
base03 = ${xrdb:base03}
base04 = ${xrdb:base04}
base05 = ${xrdb:base05}
base06 = ${xrdb:base06}
base07 = ${xrdb:base07}
base08 = ${xrdb:base08}
base09 = ${xrdb:base09}
base0A = ${xrdb:base0A}
base0B = ${xrdb:base0B}
base0C = ${xrdb:base0C}
base0D = ${xrdb:base0D}
base0E = ${xrdb:base0E}
base0F = ${xrdb:base0F}

[colors]
background = #00000000
invert = ${base16.base00}
foreground = ${base16.base07}
primary = ${base16.base0A}

[bar/default]
width = 100%
height = 22

#font-0=lucy tewi:pixelsize=11
font-0=scientifica:pixelsize=11

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 1

module-margin = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/primary]
inherit = bar/default
monitor = VGA-1
modules-left = i3
modules-right = temperature ping battery date

[bar/laptop]
inherit = bar/default
monitor = LVDS-1
modules-left = i3
modules-right = temperature ping battery date

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1

[module/date]
type = internal/date

label = %time%

time = %H:%M

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

pin-workspaces = true

label-mode = %index%
label-mode-padding = 1
label-mode-foreground = ${colors.invert}
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-padding = ${module/i3.label-mode-padding}
label-focused-foreground = ${colors.invert}
label-focused-background = ${colors.foreground}

label-unfocused = %index%
label-unfocused-padding = ${module/i3.label-mode-padding}

label-visible = %index%
label-visible-padding = ${module/i3.label-mode-padding}

label-urgent = %index%
label-urgent-padding = ${module/i3.label-mode-padding}
label-urgent-foreground = ${colors.invert}
label-urgent-background = ${colors.primary}

[module/ping]
type = custom/script

exec = ~/.config/polybar/ping.sh
interval = 1

[module/temperature]
type = internal/temperature
interval = 0.1
thermal-zone = 1
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 90

[module/cpu]
type = internal/cpu

interval = 0.5

[module/memory]
type = internal/memory

interval = 3

; vim:ft=dosini
